<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Mis Contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp" android:layout_marginTop="74dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Agregar contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNewContact"
            android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/contactList" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="122dp" android:layout_marginStart="122dp" android:layout_marginBottom="174dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ListView
            android:layout_width="330dp"
            android:layout_height="274dp"
            android:id="@+id/contactList" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp" android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="61dp" app:layout_constraintBottom_toTopOf="@+id/buttonNewContact"/>

</android.support.constraint.ConstraintLayout>