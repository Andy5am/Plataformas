<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Mis Contactos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp" android:layout_marginTop="74dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ListView
            android:layout_width="270dp"
            android:layout_height="357dp"
            android:id="@+id/contactList" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Button
            android:text="Agregar contacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNewContact" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/contactList" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="122dp" android:layout_marginStart="122dp"/>

</android.support.constraint.ConstraintLayout>