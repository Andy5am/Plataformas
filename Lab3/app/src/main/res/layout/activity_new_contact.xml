<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewContactActivity">

    <EditText

            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameInput"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" android:layout_marginTop="258dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Nombre"/>
    <EditText
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/numInput"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/nameInput" android:hint="Telefono"/>
    <Button
            android:text="Regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReturn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38dp" android:layout_marginStart="38dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="106dp"
            android:layout_marginTop="101dp" app:layout_constraintTop_toBottomOf="@+id/mailInput"/>
    <Button
            android:text="Crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCreate"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="106dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="101dp" app:layout_constraintTop_toBottomOf="@+id/mailInput"/>
    <EditText
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/mailInput"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/numInput" android:hint="Correo"/>
</android.support.constraint.ConstraintLayout>